.text-center
  %h3.general-login-title Set new password

= form_for(resource, as: resource_name, url: password_path(resource_name),
          html: { method: :put, class: "general-form" }) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  .form-group.mb-30
    = f.label :password, "Type a new Password", class: "control-label input-label"
    - if @minimum_password_length
      %em #{@minimum_password_length} characters minimum
      %br
    = f.password_field :password, id: "password", class: "form-control",
                        placeholder: "Type a new Password", autofocus: true

  .form-group.mb-40
    = f.label :password_confirmation, "Confirm Password", class: "control-label input-label"
    = f.password_field :password_confirmation, id: "confirmPassword", class: "form-control",
                        placeholder: "Confirm Password"

  = f.submit "Change", class: "btn btn-default center-block mb-20"

  -# Have to do smth. with it
  = render "devise/shared/links"




