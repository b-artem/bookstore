%tr{id: "line-item-#{line_item.id}"}
  %td
    .general-img-wrap-table
      = image_tag line_item.book.image_url, alt: "design-book",
                  class: 'cart-img-shadow pull-left'
      -# %img.cart-img-shadow.pull-left{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
  %td
    %p.title= line_item.book.title
  %td
    %span.font-16.in-gold-500= number_to_currency(line_item.book.price)
  %td
    .input-group

      = form_tag line_items_path(book_id: line_item.book.id), id: 'line-item-form' do
        = link_to '', class: 'input-link',
                  onclick: "decrementQuantity(); return false;" do
          %i.fa.fa-minus.line-height-40
        %input.form-control.quantity-input{name: 'quantity', type: "text", value: 1}
        -# = text_field_tag :quantity, class: 'form-control quantity-input', value: 1
        -# = submit_tag t('.add_to_cart'), class: 'btn btn-default pull-right general-position'
        = link_to '', class: 'input-link',
                  onclick: "incrementQuantity(); return false;" do
          %i.fa.fa-plus.line-height-40

      -# %a.input-link{href: "#"}
      -#   %i.fa.fa-minus.line-heaght-40
      -# %input.form-control.quantity-input{type: "text", value: "#{line_item.quantity}"}
      -# %a.input-link{href: "#"}
      -#   %i.fa.fa-plus.line-heaght-40

  %td
    %span.font-16.in-gold-500 €32.90 need to do smth.
  %td
    %button.close.general-cart-close{type: "button", 'aria-label': "Close"}
      %span{'aria-hidden': "true"} &times;


