.general-cart-item.divider-lg-bottom
  %button.close.general-cart-close{type: "button", 'aria-label': "Close"}
    %span{'aria-hidden': "true"} &times;
  .general-img-wrap-table
    = link_to book_path(line_item.book), id: "photo-view-#{line_item.book.id}-xs" do
      = image_tag line_item.book.image_url, class: 'cart-img-shadow',
                  alt: "design-book"
  = link_to book_path(line_item.book), id: "title-view-#{line_item.book.id}-xs" do
    %p.title.in-gold-500= line_item.book.title
  %table.table
    %tr
      %td
        %span.in-grey-600= t '.price'
      %td
        %span.font-16.in-gold-500= line_item.decorate.price
    %tr
      %td.vertical-middle
        %span.in-grey-600= t '.quantity'
      %td
        .input-group


          = form_tag line_items_path(book_id: line_item.book.id), id: 'line-item-form' do
            = link_to '', class: 'input-link',
                      onclick: "decrementQuantity(); return false;" do
              %i.fa.fa-minus.line-height-40
            %input.form-control.quantity-input{name: 'quantity', type: "text", value: 1}
            -# = text_field_tag :quantity, class: 'form-control quantity-input', value: 1
            -# = submit_tag t('.add_to_cart'), class: 'btn btn-default pull-right general-position'
            = link_to '', class: 'input-link',
                      onclick: "incrementQuantity(); return false;" do
              %i.fa.fa-plus.line-height-40


          -#
          -# %a.input-link{href: "#"}
          -#   %i.fa.fa-minus.line-heaght-40
          -# %input.form-control.quantity-input{type: "text"} 57
          -# %a.input-link{href: "#"}
          -#   %i.fa.fa-plus.line-heaght-40
    %tr
      %td
        %span.in-grey-600= t '.sub_total'
      %td
