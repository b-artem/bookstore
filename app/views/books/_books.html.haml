- books.each do |book|
  .col-xs-6.col-sm-3
    .general-thumb-wrap
      .thumbnail.general-thumbnail
        = image_tag book.image_url, class: 'img-shadow general-thumbnail-img',
                    alt: "design-book"
        .thumb-hover
          .general-thumb-link-wrap
            = link_to book_path(book), class: 'thumb-hover-link' do
              %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
            = link_to '#', class: 'thumb-hover-link' do
              %i.fa.fa-shopping-cart.thumb-icon
    .general-thumb-info
      %p.title= book.title
      %p.font-16.in-gold-500= number_to_currency(book.price)
      %span.divider-sm
      -# Decorator somehow ruins payout
      %p.lead.small= book.decorate.authors_names




