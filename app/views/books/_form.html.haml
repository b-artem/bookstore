= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :image_url
    = f.text_field :image_url
  .field
    = f.label :publication_year
    = f.number_field :publication_year
  .field
    = f.label :dimensions
    = f.text_field :dimensions
  .field
    = f.label :materials
    = f.text_field :materials
  .actions
    = f.submit 'Save'
