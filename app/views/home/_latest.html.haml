.row
  .col-sm-5
    .general-img-wrap
      = image_tag latest.image_url, class: 'img-shadow general-thumbnail-img',
                alt: "design-book"
      -# %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
  .col-sm-7
    .mb-60
      %h1= latest.title
      %p.lead= latest.short_description
      %p.lead.small= latest.authors_names
      .general-align
        -# %button.disabled.btn= t 'buy_now'
        = button_to t('.buy_now'),
                    line_items_path(book_id: latest.id, quantity: 1),
                    class: 'btn btn-primary'



