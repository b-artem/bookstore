- Book::CATEGORIES.each do |category|
  - bestseller = Book.best_seller(category).decorate
  -# - best_sellers.each do |bestseller|
  .col-sm-6.col-md-3
    .general-thumb-wrap
      .thumbnail.general-thumbnail
        = image_tag bestseller.image_url, class: 'img-shadow general-thumbnail-img',
                    alt: "design-book"
        .thumb-hover
          .general-thumb-link-wrap
            = link_to book_path(bestseller), id: "book-view-#{bestseller.id}",
                      class: 'thumb-hover-link' do
              %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
            = link_to line_items_path(book_id: bestseller.id, quantity: 1), method: :post,
                        class: 'thumb-hover-link' do
              %i.fa.fa-shopping-cart.thumb-icon
    .mb-35
      .clearfix
        %p.pull-right.font-16.in-gold-500= number_to_currency bestseller.price
        %p.title.mr-55= bestseller.title
      %span.divider-sm
      %p.lead.small= bestseller.authors_names



