= render 'steps'

.row.mb-20
  .col-sm-3
    %h3.general-subtitle
      = t 'orders.checkout.address.shipping_address'
      = link_to wizard_path(:address, next_step: 'confirm') do
        %span.general-edit= t('.edit')
    = render partial: 'address', object: @order.shipping_address

  .col-sm-3
    %h3.general-subtitle
      = t 'orders.checkout.address.billing_address'
      = link_to wizard_path(:address, next_step: 'confirm') do
        %span.general-edit= t('.edit')
    = render partial: 'address', object: @order.billing_address

  .col-sm-3
    %h3.general-subtitle
      = t '.shipments'
      = link_to wizard_path(:delivery, next_step: 'confirm') do
        %span.general-edit= t('.edit')
    %p.general-address
      = @order.shipping_method.name
      %br
      = @order.shipping_method.decorate.terms
      %br
      = @order.shipping_method.decorate.price

      %br
  .col-sm-3
    %h3.general-subtitle
      = t '.payment_information'
      = link_to wizard_path(:payment) do
        %span.general-edit= t('.edit')
    %p.general-address
      = '**** **** **** ' + @payment.card_number[-4,4]
      %br
      = @payment.valid_until.dup.insert(3,'20')

= render partial: 'line_items', object: @order.line_items

.text-center.general-text-right
  = render 'order_summary'

.text-center
  = button_to t('.place_order'), wizard_path(:complete), method: :get,
    class: 'btn btn-default mb-20'
