%p.in-gold-500.font-18= t '.order_summary'
%table.general-summary-table
  %tr
    %td
      %p.font-16= t '.item_total'
    %td
      %p.font-16= @current_order.decorate.item_total
  -if [:payment, :confirm].include? step
    %tr
      %td
        %p.font-16= t '.shipping'
      %td
        %p.font-16= @current_order.shipping_method.decorate.price
  %tr
    %td
      %p.font-16= t '.order_total'
    %td
      %p.font-16= @current_order.decorate.order_total
