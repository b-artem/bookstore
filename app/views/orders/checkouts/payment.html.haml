= render 'steps', locals: { step: 3 }

%h3.general-subtitle= t '.credit_card'

= simple_form_for @payment, url: wizard_path, method: :put, class: 'max-600 mb-80',
        defaults: { label_html: { class: 'control-label input-label' } } do |f|
  = f.input :card_number, as: :integer, placeholder: t('.card_number')
  .row
    .col-sm-6
      = f.input :name_on_card, placeholder: t('.name_on_card')
    .col-sm-3
      = f.input :valid_until, placeholder: t('.mm_yy')
    .col-sm-3
      = f.input :cvv, as: :integer, placeholder: t('.cvv'),
                wrapper_html: { class: 'form-group relative' }
      %i.fa.fa-question-circle.general-form-help
      -# .form-group.relative
      -#   %label.control-label.input-label{for: "firstName"} CVV
      -#   %input#firstName.form-control{name: "cvc", type: "number", placeholder: "CVV"}
      -#   %i.fa.fa-question-circle.general-form-help


  .general-text-align
    = render 'order_summary', locals: { step: step }

  = f.button :submit, t('orders.checkouts.save_and_continue'),
                class: 'btn center-block mb-20'

