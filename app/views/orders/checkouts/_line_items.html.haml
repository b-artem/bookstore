.visible-xs
  .general-cart-item.divider-lg
    - line_items.each do |line_item|
      .general-img-wrap-table
        = image_tag line_item.book.image_url, alt: "design-book"
        -# %img.cart-img-shadow{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
      %p.title= line_item.book.title
      %P.in-grey-600.fw-300= line_item.book.decorate.short_description(200)
      %table.table
        %tr
          %td
            %span.in-grey-600= t '.price'
          %td
            %span.font-16.in-gold-500= line_item.decorate.price
        %tr
          %td.vertical-middle
            %span.in-grey-600= t '.quantity'
          %td
            %span= line_item.quantity
        %tr
          %td
            %span.in-grey-600=t '.sub_total'
          %td
            %span.font-16.in-gold-500= line_item.decorate.subtotal

